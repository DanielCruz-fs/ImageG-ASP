@model ImageGallery.Models.UploadImageModel

<div class="container body-content" style="margin-top: 20px">
    <div class="row upload-container">
        <div class="upload-form drop-shadow">
            <form asp-action="UploadNewImage" method="post" enctype="multipart/form-data" id="upload-form">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Tags">Tags</label>
                    <input type="text" class="form-control"/>
                </div>
                <div class="form-group">
                    <label class="btn btn-primary btn-file">Browse images
                        <input type="file" name="file" style="display: none"/>
                    </label>
                </div>
                <div class="submit">
                    <button class="btn btn-info" type="submit" id="btn-upload">
                        submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>